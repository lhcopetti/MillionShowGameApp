<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luiscopetti.millionshowgameapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        >
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainGame"
            android:label="@string/title_activity_main_game"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".GameMenu"
            android:label="@string/title_activity_game_menu"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ChooseCards"
            android:label="@string/title_activity_choose_cards"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".RankingActivity"
            android:label="@string/title_activity_ranking"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
