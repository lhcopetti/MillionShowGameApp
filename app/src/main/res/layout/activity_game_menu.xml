<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_no_button"
    tools:context="com.example.luiscopetti.millionshowgameapp.GameMenu">

    <Button
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:id="@+id/btn_Play"
        android:background="@drawable/play_button"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:id="@+id/btn_Ranking"
        android:background="@drawable/button_scores"
        android:layout_alignTop="@+id/btn_Play"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <!--<Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Tabela Premios"
        android:id="@+id/btn_Prizes"
        android:layout_below="@+id/btn_Ranking"
        android:layout_centerHorizontal="true" /> -->

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:background="@drawable/gamemenu_show_do_milhao_icon"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
